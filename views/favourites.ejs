<!DOCTYPE html>
<html>
  <head>
	<!-- Page Title -->
    <title>Favourites</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
		
  </head>
  <body>
  	<% include partials/menu %>
  	<div id="rewards" class="section"> 
		<div class="container">
			<h2>Favourite Restaurants</h2>
			<table class="table">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Restaurant</th>
						<th scope="col">Address</th>
						<th scope="col">Unfavourite</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i=0; i<data.length; i++) { %>
					<form action="/favourites/unfavourite" method="post"> 
					<tr>
						<td style="display:none;"><input type="hidden" name="address" value="<%= data[i].address%>"></td>
						<td style="display:none;"><input type="hidden" name="rname" value="<%= data[i].rname%>"></td>
						<td name="rname" value="<%= data[i].rname%>"><a href="<%= data[i].link %>"><%= data[i].rname%></a></td>
						<td name="address" value="<%= data[i].address%>"><%= data[i].address%></td>
						<td><input type='submit' class='Unfavourite' value='Unfavourite'></td>
					</tr>
					</form>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
  </body>
</html>