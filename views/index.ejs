<!DOCTYPE html>
<html>
  <head>
		<!-- Page Title -->
    <title>Makan Place</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">

	<!-- Custom Styles -->
	<link type="text/css" rel="stylesheet" href="stylesheets/style_home.css" />
	<link rel="stylesheet" href="stylesheets/bootstrap/bootstrap.css">

  </head>
  <body data-spy="scroll" data-target="#pb-navbar" data-offset="200">
  	<!-- navigation bar -->
	<% include partials/menu %>

	<div id="booking" class="section">
		<div class="container">
			<div class="search-bar">
				<div class="row">
					<div class="col-md-11">
						<span class="form-label">
							<form id="search-bar" action="restaurants" role="form" method="get">
								<input class="form-control" type="text" placeholder="Search for restaurants..." aria-label="Search" aria-describedby="basic-addon2" name="restaurantname"> 
							</form>
						</span>
					</div>
					<div class="col-md-1">
						<button type="search-bar" class="btn btn-primary">Search</button>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="booking-cta">
						<h1>It's Makan Time!</h1>
						<p>Discover new and excellent restaurants</p>
						<p>Secure a table for free</p>
						<p>Save up with our awesome promotions</p>
						<p>Gain points to redeem rewards</p>
					</div>
				</div>
				<div class="col-md-5 col-md-offset-1">
					<div class="booking-form">
						<form id="html_form" action="restaurants" role="form" method="get">
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<span class="form-label">Cuisine</span>
										<select class="form-control">
											<option name="cuisine">Any Cuisine</option>
											<% for (var i = 0; i < cuisine.length; i++) {%>
												<option name="cuisine"><%= cuisine[i].cname; %></option>
											<% }%>
										</select>
										<span class="select-arrow"></span>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<span class="form-label">Location</span>
										<select class="form-control">
											<option name="location">Any Location</option>
											<% for (var i = 0; i < location.length; i++) {%>
												<option name="location"><%= location[i].area; %></option>
											<% }%>
										</select>
										<span class="select-arrow"></span>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<span class="form-label">Date</span>
										<input class="form-control" type="date" placeholder="Date" name="date">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<span class="form-label">Time</span>
										<select class="form-control">
											<% for (var i = 0; i < time.length; i++) {%>
												<option name="time"><%= time[i]; %></option>
											<% }%>
										</select>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<span class="form-label">Number of Pax</span>
										<select class="form-control">
											<% for (var i = 1; i < 11; i++) {%>
											<option name="pax"><%= i; %></option>
											<% }%>
										</select>
										<span class="select-arrow"></span>
									</div>
								</div>
							</div>
							<div class="form-btn">
								<button type="submit" class="submit-btn">Search</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
  </body>
</html>