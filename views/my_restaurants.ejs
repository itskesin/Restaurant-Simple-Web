<!DOCTYPE html>
<html>

<head>
	<!-- Page Title -->
	<title>Rewards</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">

</head>

<body>
	<% include partials/owner_menu %>

	<div class="container-fluid">
		<div class="row">
			<nav class="col-md-2 d-none d-md-block bg-light sidebar">
				<div class="sidebar-sticky">
					<ul class="nav flex-column">
						<li class="nav-item">
							<div class="container">
								<div class="card card-register mx-auto mt-5">
									<div class="card-header">Adding a Restaurant</div>
									<div class="card-body">
										<form action="/my_restaurants/add" method="post">
											<div class="form-group">
												<div class="form-label-group">
													<input type="text" id="rname" class="form-control"
														placeholder="Restaurant Name" required="required"
														autofocus="autofocus" name="rname">
													<label for="rname">Restautant name</label>
												</div>
											</div>
											<div class="form-group">
												<div class="form-label-group">
													<input type="text" id="address" class="form-control"
														placeholder="Restaurant Address" required="required"
														autofocus="autofocus" name="address">
													<label for="rname">Restautant Address</label>
												</div>
											</div>

											<button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
										</form>
									</div>
								</div>
							</div>

						</li>
					</ul>
				</div>
			</nav>
			<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
				<h2>My Restaurants</h2>
				<div class="row">
					<div class="col-md-10">
					</div>
				</div>
				<div class="row">
					<p> </p>
				</div>
				<div
					class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
					<!-- Example row of columns -->

					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Restaurant Name</th>
								<th scope="col">Address</th>
								<th scope="col">Edit</th>
							</tr>
						</thead>
						<tbody>

							<% for(var i=0; i<data.length; i++) { %>
							<tr>
								<td><%-data[i].rname%></td>
								<td><%- data[i].address%></td>
								<td>
									<form action=<%=data[i].edit_link%> method="get">

										<button type="submit">Edit</button>
									</form>
								</td>

							</tr>
							<% } %>
						</tbody>
						<tbody>
							<!-- use view_rest func-->
							<tr>
								<td>Pastamzaing</td>
								<td>Jewel Changi</td>
								<td>
									<form action=sample_link>
										<input type="submit" class='Edit' value='Edit' />
									</form>
								</td>
							</tr>
							<tr>
								<td>Wonder Chikin</td>
								<td>JEM</td>
								<td><input type='button' class='Edit' value='Edit'></td>
							</tr>
							<tr>
								<td>What The Fries</td>
								<td>The Cathay</td>
								<td><input type='button' class='Edit' value='Edit'></td>
							</tr>
						</tbody>
					</table>
				</div>
			</main>
		</div>

	</div>
	<!-- /container -->
	</div>
</body>

</html>